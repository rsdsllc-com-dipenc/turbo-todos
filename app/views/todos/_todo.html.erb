<li id="<%= dom_id(todo, "item") %>" class="list-group-item">
  <%= turbo_frame_tag dom_id(todo) do %>
    <div class="d-flex justify-content-between">
      <%= link_to todo.title, edit_todo_path(todo) %>
      <%# button_to "Delete", todo_path(todo), method: :delete, class: "btn btn-danger" %>
      <%= link_to "Delete", todo_path(todo), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    </div>
  <% end %>
</li>
